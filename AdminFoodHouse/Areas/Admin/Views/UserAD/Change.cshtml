@model AdminFoodHouse.Models.AccountSell

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Content/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Content/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/Content/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/Content/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5" style=" width: 672px;margin-left: -137px;">
                            <div class="brand-logo">
                                <img src="~/Content/assets/images/logo.svg">
                            </div>

                            <h2 class="form-title">Thay đổi thông tin</h2>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                
                                <div class="form-group">
                                    <label for="name"><i class="zmdi zmdi-account material-icons-name"></i><span style="color: red;">*</span></label>
                                    <input type="text" name="displayname" class="form-control form-control-lg" id="name" value="@Model.DisplayName" /><span style="color: red;">@ViewData["err1"]</span>
                                </div>
                                <div class="form-group">
                                    <label for="dname"><i class="zmdi zmdi-account material-icons-name"></i><span style="color: red;">*</span></label>
                                    <input type="text" name="username" class="form-control form-control-lg" id="name" value="@Model.UserName" /><span style="color: red;">@ViewData["err2"]</span>
                                </div>
                                <div class="form-group">
                                    <label for="email"><i class="zmdi zmdi-email"></i><span style="color: red;"> *</span></label>
                                    <input type="email" name="email" class="form-control form-control-lg" id="email" value="@Model.Email" /><span style="color: red;">@ViewData["err5"]</span>
                                </div>
                               
                                <div class="form-group">
                                    <label for="pass"><i class="zmdi zmdi-local-phone"></i><span style="color: red;"> * </span></label>
                                    <input type="text" name="phone" class="form-control form-control-lg"value="@Model.PhoneNumber" /><span style="color: red;">@ViewData["err6"]</span>
                                </div>
                                <div class="form-group">
                                    <label for="pass"><i class="zmdi zmdi-pin"></i><span style="color: red;"> *</span></label>
                                    <input type="text" name="address" class="form-control form-control-lg" value="@Model.Address" /><span style="color: red;">@ViewData["err7"]</span>
                                </div>
                                <div class="form-group">

                                    <label for="name"><i class="zmdi zmdi-account material-icons-name"></i><span style="color: red;">*</span></label>
                                    <input type="text" name="information" class="form-control form-control-lg" id="information" value="@Model.Information" /><span style="color: red;">@ViewData["err8"]</span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Hình đại diện cửa hàng:
                                    </label>
                                    <div class="col-md-10">
                                        <input type="file" name="fFileUpload" id="fFileUpload" />
                                        <span style="color: red;">@ViewData["err9"]</span>
                                    </div>
                                </div>
                                <div class="form-group form-button">
                                    <input type="submit" name="signup" id="signup" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" value="Lưu" />
                                </div>

                            }
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
            </div>
            <!-- page-body-wrapper ends -->
        </div>
        }
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Content/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Content/assets/js/off-canvas.js"></script>
    <script src="~/Content/assets/js/hoverable-collapse.js"></script>
    <script src="~/Content/assets/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>
