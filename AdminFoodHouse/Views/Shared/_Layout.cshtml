                                <i class="fab fa-tiktok"></i>
                                <i class="fab fa-instagram"></i>
                                <i class="fab fa-youtube"></i>
                            </span>
                        </div>

                        <nav class="col-lg-5 col-md-0 col-sm-0 header__top-right" style="margin-left:90px">
                            <ul class="header__top-list">
                                @Html.Action("_LoginLogout", "Food")
                            </ul>
                        </nav>
                    </section>
                </div>
            </div>
            <!--end header top -->
            <!-- header bottom -->
            <div class="header__bottom">
                <div class="container">
                    <section class="row">
                        <div class="col-lg-3 col-md-4 col-sm-12 header__logo">
                            <h1 class="header__heading h3" style="margin-bottom:24px">
                                <a href="@Url.Action("IndexAccountSell","Food")" class="header__logo-link" style=" font-size: 20px; color: white; text-decoration: none; padding:20px">
                                    <i class="fas fa-turkey" style="font-size: 35px; color: white; "></i>
                                    Cơm Nhà Làm
                                </a>

                            </h1>
                        </div>


                        <div class="col-lg-6 col-md-7 col-sm-0 header__search">

                            <div style="width: 700px">
                                @using (Html.BeginForm("Find", "Food", FormMethod.Get, new { @class = "form-inline" }))
                                {
                                    <input type="text" name="searchString" id="searchString" class="header__search-input" placeholder="Tìm kiếm tại đây..." required oninvalid="this.setCustomValidity('Vui lòng nhập từ khóa')" oninput="this.setCustomValidity('')" />
                                    <script>
                                        var searchString = document.getElementById("name");
                                        nameInput.oninvalid = function (event) {
                                            event.target.setCustomValidity("Vui lòng nhập từ khóa");
                                        };
                                    </script>
                                    <button class="header__search-btn" type="submit">
                                        <div class="header__search-icon-wrap">
                                            <i class="fas fa-search header__search-icon"></i>
                                        </div>
                                    </button>
                                }
                            </div>

                        </div>


                        <div class="col-lg-2 col-md-0 col-sm-0 header__call">
                            <div class="header__call-icon-wrap">
                                <i class="fas fa-phone-alt header__call-icon"></i>
                            </div>
                            <div class="header__call-info">
                                <div class="header__call-text">
                                    Gọi điện tư vấn
                                </div>
                                <div class="header__call-number">
                                    039.882.3232
                                </div>
                            </div>
                        </div>















                        <a href="@Url.Action("GioHang", "ShoppingCart")" id="gioHangLink" class="col-lg-1 col-md-1 col-sm-0 header__cart" style="text-decoration: none;">
                            <div class="header__cart-icon-wrap" style="text-decoration: none;" id="gioHangLink">
                                @Html.Action("GioHangPartial", "ShoppingCart")
                                <i class="fas fa-shopping-cart header__nav-cart-icon"></i>
                            </div>
                        </a>
                    </section>
                </div>
            </div>
            <!--end header bottom -->
        </header>
        <!-- post -->
        @RenderBody()
        <footer>
            <section class="posts">
                <div class="container">
                    <div class="row">
                        <article class="footer__top-intro col-lg-5 col-md-4 col-sm-6">
                            <h4 class="footer__top-intro-heading">
                                Về chúng tôi
                            </h4>
                            <div class="footer__top-intro-content">
                                <br> <br>
                                Điện thoại: 098.760.543 <br>
