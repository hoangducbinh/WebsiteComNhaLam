@model AdminFoodHouse.Models.CategoryP

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-body">
        <h2>Sửa Loại Sản Phẩm</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2">Mã loại sản phẩm:</label>
                <div class="col-md-10">
                    <input type="text" size="70" name="iMaLSP" value="@Model.CategoryID" readonly />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">
                    Tên loại sản phẩm:
                </label>
                <div class="col-md-10">
                    <input type="text" class="form-control" id="exampleInputUsername1" min="1" name="sTenLSP" value="@Model.Name" required /><span style="color: red;">@ViewData["err1"]</span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">
                    Số thứ tự:
                </label>
                <div class="col-md-10">
                    <input type="number" class="form-control" id="exampleInputUsername1" min="1" value="@Model.STT" required name="Stt" />@ViewBag.Thongbao
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-success btn-sm" />
                    <input type="reset" value="Làm Mới" class="btn btn-danger btn-sm" />
                    <a href="@Url.Action("Index")" class="btn btn-success btn-sm" role="button">Trở Về</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>

